{
	"name": "Personal Site",
	"dockerComposeFile": [
		"docker-compose.yml"
	],
	"workspaceFolder": "/app",
	"shutdownAction": "stopCompose",
	"service": "editor",
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"dsznajder.es7-react-js-snippets",
				"esbenp.prettier-vscode",
				"bradlc.vscode-tailwindcss",
				"ms-python.black-formatter",
				"ms-python.python"
			],
		}
	},
	"remoteUser": "node",
	"features": {
		"docker-from-docker": "latest"
	}
}